{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "ViewDeb",
  "version": "0.1.0",
  "identifier": "com.viewdeb.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": false,
    "windows": [
      {
        "title": "ViewDeb",
        "width": 1280,
        "height": 900,
        "minWidth": 1000,
        "minHeight": 700,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["deb"],
    "icon": ["icons/128x128.png"],
    "linux": {
      "deb": {
        "depends": ["dpkg (>= 1.17)", "binutils (>= 2.25)"]
      }
    }
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}
